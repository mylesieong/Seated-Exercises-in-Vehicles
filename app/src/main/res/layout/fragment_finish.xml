<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="?attr/colorOnBackground" />

    <TextView
        android:id="@+id/text_nice_work"
        style="@style/Style.Overview.Headline.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:text="Nice work!" />

    <RelativeLayout
        android:id="@+id/image_finish"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/text_nice_work"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@color/white"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_finish" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panel_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_finish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_once_more"
                style="@style/Style.Finish.Button.Secondary"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape_rounded_box"
                android:text="Once more"
                app:icon="@drawable/ic_baseline_replay_24" />

            <Button
                android:id="@+id/button_finish"
                style="@style/Style.Finish.Button"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape_rounded_box"
                android:text="Finish"
                app:icon="@drawable/ic_baseline_home_24" />

            <Button
                android:id="@+id/button_start_journey"
                style="@style/Style.Finish.Button"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_box"
                android:text="Start Journey"
                app:icon="@drawable/ic_baseline_airline_seat_recline_extra_24" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ProgressBar xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/loading_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/panel_banner_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/panel_buttons"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="?android:windowBackground">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="@string/AD_UNIT_ID_BANNER"
            tools:visibility="visible" />
    </FrameLayout>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
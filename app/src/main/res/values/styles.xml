<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.Home.Tag" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Style.Overview.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Style.Overview.Headline.Dark" parent="Style.Overview.Headline">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Style.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Style.Move.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Style.Overview.Description" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="Style.Overview.SubTitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Style.Overview.SubTitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Style.Overview.SubTitle1.Dark" parent="Style.Overview.SubTitle1">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Style.Overview.Description.Dark" parent="Style.Overview.Description">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Style.Overview.Caption" parent="Style.Overview.Description">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Style.Overview.Caption.Large" parent="Style.Overview.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Style.Finish.Button" parent="Widget.MaterialComponents.Button" />

    <style name="Style.Finish.Button.Secondary" parent="Style.Finish.Button">
        <item name="backgroundTint">@color/btn_bg_color_selector_secondary</item>
    </style>
</resources>
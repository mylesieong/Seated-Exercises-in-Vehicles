<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyInSeat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_amber_400</item>
        <item name="colorPrimaryVariant">@color/md_amber_600</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_300</item>
        <item name="colorSecondaryVariant">@color/md_blue_400</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="background">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/md_blue_grey_900</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/md_red_400</item>

        <item name="android:textColor">@color/md_white_1000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>

    </style>
</resources>